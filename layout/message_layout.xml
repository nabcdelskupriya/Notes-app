<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="3dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:padding="4dp"
        android:id="@+id/message_uname"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="@color/white"
        android:background="@drawable/sender_back"
        android:textSize="20sp"
        android:id="@+id/texttv"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/sender_back"
        android:orientation="horizontal"
        android:id="@+id/m_ll"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="288dp"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="filename"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/ic_baseline_pdf"
                android:id="@+id/mfile_nametv"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:id="@+id/mtime_tv"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                />


             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:id="@+id/mtype_tv"
                android:layout_gravity="right"
                 android:layout_marginRight="100dp"
                 android:layout_marginTop="50dp"
                 android:textColor="@color/black"

                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_circle_down_24"
                android:id="@+id/downloadmbtn"
                android:layout_marginTop="50dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>